<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_app">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_color_white"
                android:orientation="vertical">

                <!-- Media -->

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="194dp"
                    android:scaleType="center"
                    app:srcCompat="@drawable/background_imc" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/button_tela_calcular"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/seed"
                        android:text="Calcular"
                        android:textColor="@color/app_color_white"
                        app:icon="@drawable/inc_imc"
                        app:iconTint="@color/app_color_white" />

                    <TextView
                        android:id="@+id/textView_titulo_tesultado_imc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/seed"
                        android:textSize="20sp"
                        android:textStyle="italic"
                        tools:text="Sobrepeso" />

                    <ImageButton
                        android:id="@+id/imageView_info"
                        android:layout_width="20dp"
                        android:layout_marginTop="12dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="10dp"
                        android:backgroundTint="@android:color/transparent"
                        android:textColor="@color/seed"
                        android:src="@drawable/icon_info"
                        app:tint="@color/md_theme_light_error" />


                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardView_Home_perfil"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="40dp"
            app:cardCornerRadius="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/imageView_perfil_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/imagem_perfil2" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/textView_saudacoes_nome"
            android:layout_width="150dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="OlÃ¡, 000000000000"
            android:textColor="@color/app_color_white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/cardView_Home_perfil"
            app:layout_constraintEnd_toEndOf="@id/cardView_Home_perfil"
            app:layout_constraintTop_toBottomOf="@id/cardView_Home_perfil"
            app:layout_goneMarginTop="70dp" />

        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/CircularDeterminateProgressBar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:max="100"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:progress="60" />

        <TextView
            android:padding="10dp"
            android:id="@+id/textView_resultado_imc"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/app_color_white"
            app:layout_constraintBottom_toBottomOf="@+id/progress_bar"
            app:layout_constraintEnd_toEndOf="@+id/progress_bar"
            app:layout_constraintStart_toStartOf="@+id/progress_bar"
            app:layout_constraintTop_toTopOf="@+id/progress_bar"
            tools:text="60%" />


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_resultado_peso"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/app_color_white"
            app:cardElevation="8dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintStart_toStartOf="@id/frameLayout"
            app:layout_constraintTop_toBottomOf="@id/frameLayout">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView_titulo_peso"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="@string/text_peso"
                    android:textColor="@color/background_app"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView_peso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="@string/text_0kg"
                    android:textColor="@color/background_app"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView_titulo_peso" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_marginVertical="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/app_color_white"
            app:layout_constraintBottom_toBottomOf="@id/cardView_resultado_peso"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cardView_resultado_peso" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_resultado_altura"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"

            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/app_color_white"
            app:cardElevation="8dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="@id/frameLayout"
            app:layout_constraintTop_toBottomOf="@id/frameLayout">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView_titulo_altura"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="@string/text_altura"
                    android:textColor="@color/background_app"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView_altura"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="@string/text_0cm"
                    android:textColor="@color/background_app"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView_titulo_altura" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

        <br.com.rodrigo.naoreveze.components.TabelaImc
            android:id="@+id/table_result_abaixo_peso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            app:circle_color="#5EA7E1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardView_resultado_peso"
            app:result_text="Abaixo do peso"
            app:table_text_number="17.0-18.4" />

        <br.com.rodrigo.naoreveze.components.TabelaImc
            android:id="@+id/table_result_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            app:circle_color="#42F149"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/table_result_abaixo_peso"
            app:result_text="Normal"
            app:table_text_number="18.5-24.9" />

        <br.com.rodrigo.naoreveze.components.TabelaImc
            android:id="@+id/table_result_sobrepeso_peso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            app:circle_color="#FFEB3B"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/table_result_normal"
            app:result_text="Sobrepeso"
            app:table_text_number="25.0-29.0" />

        <br.com.rodrigo.naoreveze.components.TabelaImc
            android:id="@+id/table_result_obesidade1_peso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            app:circle_color="#FF9800"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/table_result_sobrepeso_peso"
            app:result_text="Obesidade Grau I"
            app:table_text_number="30.0-34.9" />

        <br.com.rodrigo.naoreveze.components.TabelaImc
            android:id="@+id/table_result_obesidade2_peso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            app:circle_color="#FF5722"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/table_result_obesidade1_peso"
            app:result_text="Obesidade Grau II"
            app:table_text_number="35.0-39.9" />

        <br.com.rodrigo.naoreveze.components.TabelaImc
            android:id="@+id/table_result_obesidade3_peso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="10dp"
            app:circle_color="#FF2222"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/table_result_obesidade2_peso"
            app:result_text="Obesidade Grau III"
            app:table_text_number="> 39.9" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>






