<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_app"
    tools:context=".ui.fragments.CalculateImcFragment">


    <ImageButton
        android:id="@+id/icon_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="#00FFFFFF"
        android:foreground="?attr/selectableItemBackground"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/app_color_white" />

    <TextView
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/txt_peitoral_subistituicao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/cardView"
        android:gravity="start"
        android:text="Digite a sua altura e seu peso."
        android:textColor="@color/app_color_white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="@color/app_color_white"
        app:cardCornerRadius="30dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textField_altura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="clear_text"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="40dp"
            android:textColorHint="@color/seed"
            app:boxStrokeColor="@color/seed"
            app:counterEnabled="true"
            app:counterTextColor="@color/seed"
            app:counterMaxLength="3"
            app:hintTextColor="@color/seed"
            app:startIconDrawable="@drawable/icon_altura"
            app:startIconTint="@color/seed">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editText_altura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/text_altura_cm"
                android:inputType="number"
                android:maxEms="3"
                android:maxLength="3"
                android:maxLines="1"
                android:textColor="@color/seed"
                app:boxStrokeWidth="10dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textField_peso"
            app:endIconMode="clear_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="120dp"
            android:hint="@string/text_peso_kg"
            android:textColorHint="@color/seed"
            app:boxStrokeColor="@color/seed"
            app:counterEnabled="true"
            app:counterMaxLength="5"
            app:counterTextColor="@color/seed"
            app:hintTextColor="@color/seed"
            app:startIconDrawable="@drawable/inc_imc"
            app:startIconTint="@color/seed">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editText_peso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:maxEms="5"
                android:maxLength="5"
                android:maxLines="1"
                android:textColor="@color/seed"
                app:boxStrokeWidth="10dp" />
        </com.google.android.material.textfield.TextInputLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/button_proximo"
        android:padding="16dp"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="16dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Proximo"
        android:textColor="@color/app_color_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
