<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="br.com.rodrigo.naoreveze.ui.fragments.HomeFragment"
        android:label="HomeFragment">
    </fragment>
    <fragment
        android:id="@+id/treinoFragment"
        android:name="br.com.rodrigo.naoreveze.ui.fragments.TreinoFragment"
        android:label="TreinoFragment" >
        <action
            android:id="@+id/action_treinoFragment_to_peitoralFragment"
            app:destination="@id/peitoralFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out" />
    </fragment>
    <fragment
        android:id="@+id/peitoralFragment"
        android:name="br.com.rodrigo.naoreveze.ui.fragments.musculos.PeitoralFragment"
        android:label="fragment_peitoral"
        tools:layout="@layout/fragment_peitoral" >
        <action
            android:id="@+id/action_peitoralFragment_to_treinoFragment"
            app:destination="@id/treinoFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/slide_out" />
    </fragment>
    <fragment
        android:id="@+id/perfilFragment"
        android:name="br.com.rodrigo.naoreveze.ui.fragments.PerfilFragment"
        android:label="fragment_perfil"
        tools:layout="@layout/fragment_perfil" />
    <fragment
        android:id="@+id/imcFragment"
        android:name="br.com.rodrigo.naoreveze.ui.fragments.ImcFragment"
        android:label="fragment_imc"
        tools:layout="@layout/fragment_imc" >
        <action
            android:id="@+id/action_imcFragment_to_calculateImcFragment"
            app:destination="@id/calculateImcFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/slide_out" />
    </fragment>
    <fragment
        android:id="@+id/calculateImcFragment"
        android:name="br.com.rodrigo.naoreveze.ui.fragments.CalculateImcFragment"
        android:label="fragment_calculate_imc"
        tools:layout="@layout/fragment_calculate_imc" >
        <action
            android:id="@+id/action_calculateImcFragment_to_imcFragment"
            app:destination="@id/imcFragment"
            app:popUpTo="@id/imcFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/slide_out" />
    </fragment>

</navigation>