<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/userNameFragment"
    android:id="@+id/nav_graph_user_data">
    <fragment
        android:id="@+id/userNameFragment"
        android:name="br.com.rodrigo.naoreveze.ui.fragments.datafragments.UserNameFragment"
        android:label="fragment_user_name"
        tools:layout="@layout/fragment_user_name" >
        <action
            android:id="@+id/action_userNameFragment_to_userHeightAndWeightFragment"
            app:destination="@id/userHeightAndWeightFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/slide_out" />
        <action
            android:id="@+id/action_userNameFragment_to_mainActivity"
            app:destination="@id/mainActivity" />


    </fragment>
    <activity
        android:id="@+id/mainActivity"
        android:name="br.com.rodrigo.naoreveze.ui.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />

    <fragment
        android:id="@+id/userHeightAndWeightFragment"
        android:name="br.com.rodrigo.naoreveze.ui.fragments.datafragments.UserHeightAndWeightFragment"
        android:label="UserHeightAndWeightFragment" >
        <action
            android:id="@+id/action_userHeightAndWeightFragment_to_userNameFragment"
            app:destination="@id/userNameFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/slide_out" />
        <action
            android:id="@+id/action_userHeightAndWeightFragment_to_mainActivity"
            app:destination="@id/mainActivity"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/slide_out" />
        <argument
            android:name="nome"
            app:argType="string" />
    </fragment>
</navigation>